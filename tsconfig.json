{
	"compilerOptions": {
		"baseUrl": "./",
		"declaration": true,
		"esModuleInterop": true,
		"importHelpers": true,
		"jsx": "react",
		"lib": ["dom", "esnext"],
		"module": "esnext",
		"moduleResolution": "node",
		"noFallthroughCasesInSwitch": true,
		"outDir": "tsc_output",
		"paths": {
			"*": ["src/*", "node_modules/*", "!src/dev/*"]
		},
		"rootDir": "./src",
		"sourceMap": true,
		"strict": true
	},
	"include": ["!src/dev", "src", "types"]
}
