{
	"compilerOptions": {
		"baseUrl": "./",
		"declaration": true,
		"esModuleInterop": true,
		"importHelpers": true,
		"jsx": "react",
		"lib": ["dom", "esnext"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"noFallthroughCasesInSwitch": true,
		"paths": {
			"*": ["src/*", "node_modules/*"]
		},
		"rootDir": "./src",
		"sourceMap": true,
		"strict": true
	},
	"include": ["src", "types"]
}
